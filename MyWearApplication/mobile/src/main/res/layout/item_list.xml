<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="codeFileViewModel"
            type="com.schreiber.code.seamless.aperol.model.CodeFileViewModel"/>

        <variable
            name="actionListener"
            type="com.schreiber.code.seamless.aperol.view.common.view.OnViewClickedListener"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:onClick="@{()->actionListener.onItemClicked(codeFileViewModel)}"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:minHeight="@dimen/size_min_touchable_area"
            android:text="@{codeFileViewModel.codeFile().filename()}"
            tools:text="List item text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:minHeight="@dimen/size_min_touchable_area"
            android:text="@{codeFileViewModel.getCreationDate(context)}"
            tools:text="12.12.2000"/>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="codeFileViewModel"
            type="com.schreiber.code.seamless.aperol.model.CodeFileViewModel"/>

        <variable
            name="actionListener"
            type="com.schreiber.code.seamless.aperol.view.common.view.OnViewClickedListener"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:minHeight="@dimen/size_min_touchable_area"
        android:onClick="@{()->actionListener.onItemClicked(codeFileViewModel)}"
        android:onLongClick="@{()->actionListener.onItemLongClicked(codeFileViewModel)}"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="@dimen/margin_small">

            <ImageView
                android:layout_width="@dimen/size_thumbnail"
                android:layout_height="@dimen/size_thumbnail"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:imageBitmap="@{codeFileViewModel.getThumbnailImage(context)}"
                tools:src="@drawable/ic_add_image_black_24dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{codeFileViewModel.getDisplayName()}"
                android:textSize="@dimen/text_size_medium"
                tools:text="Display Name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{codeFileViewModel.getCreationDateShort(context)}"
                android:textSize="@dimen/text_size_small"
                tools:text="12.12.2000 12:12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@{codeFileViewModel.getHasCodeResource()}"
                tools:src="@drawable/ic_visibility_black_24dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@{codeFileViewModel.getIsOnWatchResource()}"
                tools:src="@drawable/ic_watch_black_24dp"/>

        </LinearLayout>
    </LinearLayout>
</layout>